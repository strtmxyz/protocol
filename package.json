{
  "name": "stratum-protocol",
  "version": "1.0.0",
  "description": "stratum protocol",
  "private": true,
  "scripts": {
    "compile": "hardhat compile && hardhat --config hardhat.config.ts typechain && hardhat export-abi",
    "compile-types": "hardhat --config hardhat.config.ts typechain && hardhat export-abi",
    "start": "hardhat node",
    "clean": "hardhat clean",
    "test": "hardhat test",
    
    "deploy:governance": "hardhat run deployment/governance/deploy.ts --network arbitrumSepolia",
    "deploy:assethandler": "hardhat run deployment/oracles/deploy.ts --network arbitrumSepolia",
    "deploy:vaultfactory": "hardhat run deployment/vault/deploy.ts --network arbitrumSepolia",
    "deploy:implementation": "hardhat run deployment/vault/deployImplementation.ts --network arbitrumSepolia",
    "deploy:all": "hardhat run deployment/deployAll.ts --network arbitrumSepolia",
    
    "deploy:guard:ERC20Guard": "hardhat run deployment/guards/ERC20Guard.ts --network arbitrumSepolia",
    "deploy:guard:ETHGuard": "hardhat run deployment/guards/ETHGuard.ts --network arbitrumSepolia",
    "deploy:guard:VertexAssetGuard": "hardhat run deployment/guards/VertexAssetGuard.ts --network arbitrumSepolia",
    "deploy:guard:VertexPlatformGuard": "hardhat run deployment/guards/VertexPlatformGuard.ts --network arbitrumSepolia",
    
    "config:assets": "hardhat run deployment/oracles/setting.ts --network arbitrumSepolia",
    "config:vault": "hardhat run deployment/vault/setting.ts --network arbitrumSepolia",
    "config:governance": "hardhat run deployment/governance/setting.ts --network arbitrumSepolia",
    
    "deploy:localhost": "npm run deploy:all -- --network localhost",
    "deploy:arbitrum": "npm run deploy:all -- --network arbitrumSepolia",
    "deploy:sonic-testnet": "npm run deploy:all -- --network sonicBlazeTestnet",
    "deploy:sonic-mainnet": "npm run deploy:all -- --network sonicMainnet"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-ignition": "^0.15.1",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.6",
    "@nomicfoundation/ignition-core": "^0.15.1",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "^2.3.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=12.0.0",
    "@uniswap/v3-periphery": "https://github.com/Uniswap/v3-periphery#0.8",
    "chai": "^4.2.0",
    "dotenv": "^16.0.3",
    "ethers": "^6.11.1",
    "ethers-decode-error": "^2.1.3",
    "hardhat": "^2.18.1",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "dependencies": {
    "axios": "^1.10.0"
  }
}
